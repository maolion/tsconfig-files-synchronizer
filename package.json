{
  "name": "tsconfig-files-synchronizer",
  "version": "0.1.6",
  "description": "用于 自动同步 TypeScript 的 tsconfig 编译配置文件 files 配置项",
  "main": "./dist/index.js",
  "typings": "./dist/index.d.ts",
  "scripts": {
    "develop": "./node_modules/.bin/tsc --watch",
    "build": "./node_modules/.bin/tsc && node_modules/.bin/dts-generator --name tsconfig-files-synchronizer --project ./ --out dist/index.d.ts --exclude \"{typings/**/*.ts,node_modules/**/*.d.ts,src/test/*.{ts,tsx},src/test/**/*.{ts,tsx}}\"",
    "prepublish": "(rm -rf dist || del /f /q dist) && npm run build",
    "deploy": "mocha && npm publish",
    "test": "mocha --timeout 6000"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/maolion/tsconfig-files-synchronizer.git"
  },
  "keywords": [
    "typescirpt",
    "tsconfig"
  ],
  "author": "maolion.j@gmail.com",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/maolion/tsconfig-files-synchronizer/issues"
  },
  "homepage": "https://github.com/maolion/tsconfig-files-synchronizer#readme",
  "devDependencies": {
    "chai": "^3.5.0",
    "chai-as-promised": "^6.0.0",
    "mocha": "^3.1.2",
    "typescript": "^1.8.10",
    "x-dts-generator": "^1.0.6"
  },
  "dependencies": {
    "chokidar": "^1.6.1",
    "fs-extra": "^1.0.0",
    "thenfail": "^0.4.12"
  }
}
